<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="invalid-feedback">Please enter a title</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="campground[location]"
          required
        />
        <div class="invalid-feedback">Please enter a location</div>
      </div>
      <!--  <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="campground[image]"
          required
        />
        <div class="invalid-feedback">Please enter a image URL</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="price"
            id="price"
            placeholder="0.00"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
          <div class="invalid-feedback">Please enter a price</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="descripton">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="descripton"
          name="campground[descripton]"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a title</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add campground</button>
      </div>
    </form>
    <a href="/campgrounds">All campgrounds</a>
  </div>
</div>
